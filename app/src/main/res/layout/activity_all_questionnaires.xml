<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/text_view_hello_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello, user"
        android:textSize="24dp"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/text_view_motivation_message"
        android:layout_below="@id/text_view_hello_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/motivation_message"
        android:textSize="16dp"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        />

    <ListView
        android:id="@+id/list_view_start_questionnaire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/submit_responses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit responses"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/button_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
